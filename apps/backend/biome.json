{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noCommentText": "off"
			},
			"style":{
				"noUselessElse": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "always",
			"trailingComma": "all",
			"quoteProperties": "preserve",
			"bracketSpacing": false,
			"bracketSameLine": false
		}
	}
}
